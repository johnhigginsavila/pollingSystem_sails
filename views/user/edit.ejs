<div class="container">
	<form action="/user/update/<%= user.id %>" method="POST" class="form-signin">
		<fieldset class="container-fluid col-lg-4 col-lg-offset-4">
			<h2>Hey, you're editing a user...</h2>
			<input value="<%= user.firstname %>" name="firstname" id="firstname" type="text" class="form-control"/>
			<input value="<%= user.lastname %>" name="lastname" id="lastname" type="text" class="form-control"/>
			<input value="<%= user.email %>" name="email" id="email" type="text" class="form-control"/>
			<% if (session.authenticated && session.User.admin) { %>
				<% if(user.admin) { %>
					<input type="hidden" name="admin" id="admin" value="unchecked">
					<label class="checkbox"><input type="checkbox" name="admin" id="admin" checked> Admin</label>
				<% } else { %>
					<input type="hidden" name="admin" id="admin" value="unchecked">
					<label class="checkbox"><input type="checkbox" name="admin" id="admin"> Admin</label>
				<% } %>
			<% } %>
			<input type="submit" value="Proceed" class="btn btn-lg btn-primary btn-block"/>
			<input type="hidden" name="_csrf" value="<%= _csrf %>" />
		</fieldset>
	</form>
</div>
