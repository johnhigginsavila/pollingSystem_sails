<main class="container">
  <form class="form-horizontal form-signin" id="sign-up-form" action="/user/create" method="POST">
    <fieldset class="container-fluid col-lg-4 col-lg-offset-4">
      <legend>Create an account!</legend>
      <% if(flash && flash.err) { %>
          <ul class="alert alert-success">
      <% Object.keys(flash.err).forEach(function(error){ %>
            <li><%- JSON.stringify(flash.err[error]) %> </li>	
      <% })	%>
          </ul>
      <% } %>
      <div class="form-group">
        <div class="">
          <input type="text" class="form-control" placeholder="First Name" name="firstname" id="firstname">
        </div>
      </div>
      <div class="form-group">
        <div>
          <input type="text" class="form-control" placeholder="Last Name" name="lastname" id="lanstname">
        </div>
      </div>
      <div class="form-group">
        <div class="">
          <input type="text" class="form-control" placeholder="Email" name="email" id="email">
        </div>
      </div>
      <div class="form-group">
        <div class="">
          <input type="password" class="form-control" placeholder="Password" name="password" id="password">
        </div>
      </div>
      <div class="form-group">
        <div>
          <input type="password" class="form-control" placeholder="Confirm Password" name="confirmation" id="confirmation">
        </div>
      </div>
      <div class="form-group">
        
        <div class="col-lg-offset-6">
          <button type="reset" class="btn btn-default">Cancel</button>
          <button type="submit" class="btn btn-primary">Submit</button>
          <input type="hidden" name="_csrf" value="<%= _csrf %>">
        </div>
      </div>
    </fieldset>
  </form>
</main>