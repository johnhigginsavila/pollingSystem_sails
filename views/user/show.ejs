<div class="container">
	<h1><%= user.firstname %></h1>
	<h4><%= user.lastname %>, <%= user.firstname %></h4>
	<% if (user.admin){ %>
		<img class="icon" src="/images/admin.png">
	<% } else { %>
		<img class="icon" src="/images/pawn.png">
	<% } %>
	<hr>
	<h4><%= user.email %></h4>
  <a class="btn btn-medium btn-primary" href="/user/edit/<%= user.id %>">Edit</a>
</div>
